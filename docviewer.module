function docviewer_list($uid = FALSE) {
  global $user;
  $output = "";
  if (user_access('add books')||user_access('administer docviewer')) $output .= drupal_get_form("docviewer_upload_form");
  if ($uid == FALSE) {
    if (user_access('read books')||user_access('download books')||user_access('administer docviewer')) $query = db_query("SELECT docid, filename, filesize, pages, uid FROM {docviewer_documents} WHERE active=1");
    if (!(user_access('read books')&&user_access('download books')&&user_access('administer docviewer'))&&(user_access('add books')||user_access('delete own books'))) $query = db_query("SELECT docid, filename, filesize, pages, uid FROM {docviewer_documents} WHERE active=1 AND uid=%d", $user->uid);
  }
  else {
    if (is_numeric($uid)) {
      $query = db_query("SELECT docid, filename, filesize, pages, uid FROM {docviewer_documents} WHERE uid=%d, active=1", $uid);
    }
  }
  $header = array('Id', t('Filename'), t('User'), t('Size'), t('Pages'), t('Actions')); 
  $data = array();
  while ($row = db_fetch_object($query)) {
	$actions = "";
    if ((($user->uid == $row->uid)&&user_access('delete own books'))||user_access('administer books'))
    {
      $actions = l(t(delete), 'docviewer/'. $row->docid .'/delete', array('alias' => TRUE));
      $actions .= '<br>';
	}
    $actions .= l(t(view), 'books/'. $row->uid .'/'. $row->docid);
    $data[] = array(
      $row->docid,
      $row->filename,
      $row->uid,
      $row->filesize,
      $row->pages,
      $actions,
    );
  }
  $output .= theme_table($header, $data);
  return $output; 
} 

